@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = Model.Success ? "Contraseña restablecida" : "Error";
    Layout = "_LoginLayout";
}

<div class="flex flex-col items-center mb-8">
    <div class="w-10 h-10 @(Model.Success ? "bg-green-500" : "bg-red-500") flex items-center justify-center rounded-sm">
        <span class="material-symbols-outlined text-white text-2xl">@(Model.Success ? "check_circle" : "error")</span>
    </div>
</div>

<div class="bg-white border border-slate-200 rounded-lg shadow-sm p-8 text-center">
    @if (Model.Success)
    {
        <h2 class="text-xl font-semibold text-slate-800 mb-2">Contraseña restablecida</h2>
        <p class="text-sm text-slate-600 mb-6">Su contraseña ha sido cambiada. Ya puede iniciar sesión con la nueva contraseña.</p>
    }
    else
    {
        <h2 class="text-xl font-semibold text-slate-800 mb-2">Enlace no válido</h2>
        <p class="text-sm text-slate-600 mb-6">El enlace ha expirado o no es válido. Solicite nuevamente la recuperación de contraseña.</p>
    }
    <a asp-page="./Login" class="inline-flex items-center gap-2 py-3 px-6 bg-codelco-orange hover:bg-[#E55A16] text-white font-bold rounded shadow-sm transition-colors text-sm">
        <span class="material-icons text-sm">login</span>
        Iniciar sesión
    </a>
    @if (!Model.Success)
    {
        <p class="mt-4">
            <a asp-page="./ForgotPassword" class="text-codelco-orange font-medium hover:underline text-sm">Recuperar contraseña de nuevo</a>
        </p>
    }
</div>
