@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
    Layout = "_LoginLayout";
}

<div class="flex flex-col items-center mb-8">
    <div class="flex items-center gap-3 mb-2">
        <div class="w-10 h-10 bg-codelco-orange flex items-center justify-center rounded-sm">
            <span class="material-symbols-outlined text-white text-2xl">person_add</span>
        </div>
        <div class="text-left border-l border-slate-300 pl-3">
            <h1 class="text-xl font-bold text-slate-800 leading-none">RitWeb</h1>
            <p class="text-sm font-medium text-slate-500 uppercase tracking-wider mt-1">Crear cuenta</p>
        </div>
    </div>
</div>

<div class="bg-white border border-slate-200 rounded-lg shadow-sm p-8">
    <h2 class="text-xl font-semibold text-slate-800 mb-6 text-center">Registro de usuario</h2>

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-5">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm" role="alert"></div>

        <div class="space-y-1.5">
            <label asp-for="Input.Email" class="block text-sm font-medium text-slate-700">Correo electrónico</label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <span class="material-icons text-codelco-orange text-xl">person</span>
                </div>
                <input asp-for="Input.Email" class="block w-full pl-10 pr-3 py-2.5 bg-white border border-slate-300 rounded text-slate-900 text-sm focus:ring-2 focus:ring-codelco-orange/20 focus:border-codelco-orange outline-none transition-all" autocomplete="username" aria-required="true" placeholder="usuario@ejemplo.com" />
            </div>
            <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
        </div>

        <div class="space-y-1.5">
            <label asp-for="Input.Password" class="block text-sm font-medium text-slate-700">Contraseña</label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <span class="material-icons text-codelco-orange text-xl">lock</span>
                </div>
                <input asp-for="Input.Password" class="block w-full pl-10 pr-3 py-2.5 bg-white border border-slate-300 rounded text-slate-900 text-sm focus:ring-2 focus:ring-codelco-orange/20 focus:border-codelco-orange outline-none transition-all" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
            </div>
            <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
        </div>

        <div class="space-y-1.5">
            <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-slate-700">Confirmar contraseña</label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <span class="material-icons text-codelco-orange text-xl">lock</span>
                </div>
                <input asp-for="Input.ConfirmPassword" class="block w-full pl-10 pr-3 py-2.5 bg-white border border-slate-300 rounded text-slate-900 text-sm focus:ring-2 focus:ring-codelco-orange/20 focus:border-codelco-orange outline-none transition-all" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-sm"></span>
        </div>

        <button id="registerSubmit" type="submit" class="w-full py-3 px-4 bg-codelco-orange hover:bg-[#E55A16] text-white font-bold rounded shadow-sm transition-colors flex items-center justify-center gap-2 uppercase tracking-wide text-sm">
            <span class="material-icons text-lg">person_add</span>
            Crear cuenta
        </button>
    </form>

    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
    {
        <div class="mt-6 pt-6 border-t border-slate-100">
            <p class="text-sm font-medium text-slate-700 mb-3">O registrarse con</p>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="flex flex-wrap gap-2">
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <button type="submit" class="py-2 px-4 border border-slate-300 rounded text-slate-700 text-sm font-medium hover:bg-slate-50 transition-colors" name="provider" value="@provider.Name" title="Registrarse con @provider.DisplayName">@provider.DisplayName</button>
                }
            </form>
        </div>
    }

    <div class="mt-6 pt-6 border-t border-slate-100 text-center">
        <p class="text-sm text-slate-600">¿Ya tiene cuenta? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-codelco-orange font-medium hover:underline">Iniciar sesión</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
