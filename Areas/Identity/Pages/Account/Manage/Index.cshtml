@page
@model IndexModel
@{
    ViewData["Title"] = "Mi perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
    var displayName = Model.Username ?? Model.Email ?? "Usuario";
}

<div class="max-w-7xl mx-auto">
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-slate-800 tracking-tight">Mi perfil</h1>
        <p class="mt-1 text-slate-500 text-sm">Administre su información de contacto y datos de la cuenta.</p>
    </div>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 lg:gap-8">
        <aside class="lg:col-span-3">
            <partial name="_ManageNav" />
        </aside>
        <div class="lg:col-span-9 space-y-6">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-6 lg:gap-8">
        @* Ficha del usuario *@
        <div class="lg:col-span-2">
            <div class="rounded-2xl border border-slate-200 bg-white shadow-lg overflow-hidden">
                <div class="bg-gradient-to-br from-ritweb-teal via-teal-600 to-teal-700 px-6 pt-6 pb-8">
                    <div class="flex flex-col items-center text-center">
                        <div class="w-20 h-20 rounded-full bg-white/25 backdrop-blur flex items-center justify-center text-white text-2xl font-bold shadow-inner ring-2 ring-white/30">
                            @(displayName.Length > 0 ? displayName[0].ToString().ToUpperInvariant() : "?")
                        </div>
                        <h2 class="mt-4 text-lg font-semibold text-white truncate w-full max-w-[200px]" title="@Model.Email">@displayName</h2>
                        <p class="text-white/80 text-sm mt-0.5">Cuenta RitWeb</p>
                    </div>
                </div>
                <div class="px-6 py-4 space-y-0">
                    <div class="flex items-center justify-between py-4 border-b border-slate-100">
                        <span class="text-sm text-slate-500 flex items-center gap-2">
                            <span class="material-icons text-slate-400 text-lg">mail</span>
                            Correo confirmado
                        </span>
                        @if (Model.EmailConfirmed)
                        {
                            <span class="inline-flex items-center gap-1 rounded-full bg-emerald-50 px-2.5 py-1 text-xs font-medium text-emerald-700 border border-emerald-100">
                                <span class="material-icons text-sm">check_circle</span> Sí
                            </span>
                        }
                        else
                        {
                            <span class="inline-flex items-center gap-1 rounded-full bg-amber-50 px-2.5 py-1 text-xs font-medium text-amber-700 border border-amber-100">
                                <span class="material-icons text-sm">schedule</span> Pendiente
                            </span>
                        }
                    </div>
                    <div class="flex items-center justify-between py-4">
                        <span class="text-sm text-slate-500 flex items-center gap-2">
                            <span class="material-icons text-slate-400 text-lg">phone</span>
                            Teléfono
                        </span>
                        <span class="text-sm font-medium text-slate-800">@(string.IsNullOrEmpty(Model.Input?.PhoneNumber) ? "No registrado" : Model.Input.PhoneNumber)</span>
                    </div>
                </div>
            </div>
        </div>

        @* Formulario editar datos *@
        <div class="lg:col-span-3">
            <div class="rounded-2xl border border-slate-200 bg-white shadow-lg overflow-hidden">
                <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50">
                    <h3 class="text-sm font-semibold text-slate-700 uppercase tracking-wider">Editar datos de contacto</h3>
                    <p class="text-slate-500 text-xs mt-0.5">Actualice su número de teléfono. El correo no se puede modificar aquí.</p>
                </div>
                <form id="profile-form" method="post" class="p-6">
                    <div asp-validation-summary="ModelOnly" class="rounded-lg bg-red-50 border border-red-100 text-red-700 text-sm p-3 mb-4" role="alert"></div>
                    <div class="mb-5">
                        <label asp-for="Username" class="block text-xs font-medium text-slate-500 uppercase tracking-wide mb-1.5">Correo (solo lectura)</label>
                        <input asp-for="Username" class="w-full rounded-lg border border-slate-200 bg-slate-50 px-4 py-2.5 text-slate-600 text-sm cursor-not-allowed" placeholder="Usuario" disabled readonly />
                    </div>
                    <div class="mb-6">
                        <label asp-for="Input.PhoneNumber" class="block text-xs font-medium text-slate-500 uppercase tracking-wide mb-1.5">Teléfono</label>
                        <input asp-for="Input.PhoneNumber" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 text-sm text-slate-800 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-ritweb-teal/50 focus:border-ritweb-teal transition" placeholder="Ej: +56 9 1234 5678" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-red-600 text-xs mt-1 block"></span>
                    </div>
                    <button id="update-profile-button" type="submit" class="w-full py-3 px-4 rounded-lg text-sm font-semibold text-white bg-ritweb-teal hover:bg-teal-700 shadow-md hover:shadow-lg transition-all focus:outline-none focus:ring-2 focus:ring-ritweb-teal focus:ring-offset-2">
                        Guardar cambios
                    </button>
                </form>
            </div>
        </div>
    </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
