@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-xl font-bold text-gray-900 mb-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="max-w-xl">
    <form id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4" role="alert"></div>
        <div class="mb-4">
            <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
            <input asp-for="Username" class="w-full rounded-md border border-gray-300 px-3 py-2 bg-gray-100 text-gray-500" placeholder="Please choose your username." disabled />
        </div>
        <div class="mb-4">
            <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1">Phone number</label>
            <input asp-for="Input.PhoneNumber" class="w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Please enter your phone number." />
            <span asp-validation-for="Input.PhoneNumber" class="text-red-600 text-sm"></span>
        </div>
        <button id="update-profile-button" type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500">Save</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
