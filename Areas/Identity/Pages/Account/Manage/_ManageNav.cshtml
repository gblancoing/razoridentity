@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    string Active(string page) => ManageNavPages.PageNavClass(ViewContext, page) == "active" ? "active" : null;
    string NavItemClass(string page) => Active(page) == "active"
        ? "flex items-center gap-3 px-4 py-3 text-sm font-semibold border-l-4 border-codelco-orange bg-codelco-orange/5 text-codelco-orange"
        : "flex items-center gap-3 px-4 py-3 text-sm font-medium text-slate-600 hover:bg-slate-50 transition-colors border-l-4 border-transparent";
}
<nav class="space-y-0 bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden" aria-label="Menú de cuenta">
    <a id="profile" asp-page="./Index" class="@NavItemClass(ManageNavPages.Index)">
        <span class="material-icons text-xl text-inherit">person</span>
        Perfil
    </a>
    <a id="email" asp-page="./Email" class="@NavItemClass(ManageNavPages.Email)">
        <span class="material-icons text-xl text-inherit">email</span>
        Correo electrónico
    </a>
    <a id="change-password" asp-page="./ChangePassword" class="@NavItemClass(ManageNavPages.ChangePassword)">
        <span class="material-icons text-xl text-inherit">lock</span>
        Contraseña
    </a>
    @if (hasExternalLogins)
    {
        <a id="external-login" asp-page="./ExternalLogins" class="@NavItemClass(ManageNavPages.ExternalLogins)">
            <span class="material-icons text-xl text-inherit">link</span>
            Inicios de sesión externos
        </a>
    }
    <a id="two-factor" asp-page="./TwoFactorAuthentication" class="@NavItemClass(ManageNavPages.TwoFactorAuthentication)">
        <span class="material-icons text-xl text-inherit">verified_user</span>
        Autenticación 2FA
    </a>
    <a id="personal-data" asp-page="./PersonalData" class="@NavItemClass(ManageNavPages.PersonalData)">
        <span class="material-icons text-xl text-inherit">badge</span>
        Datos personales
    </a>
</nav>
