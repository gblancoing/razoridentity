@page
@model EmailModel
@{
    Layout = "_ManageLayout";
    ViewData["Title"] = "Correo electrónico";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="max-w-7xl mx-auto">
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-slate-800 tracking-tight">Correo electrónico</h1>
        <p class="mt-1 text-slate-500 text-sm">Administre su dirección de correo y la verificación.</p>
    </div>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="space-y-6">
            <div class="rounded-2xl border border-slate-200 bg-white shadow-lg overflow-hidden">
                <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50">
                    <h2 class="text-sm font-semibold text-slate-700 uppercase tracking-wider">Correo actual</h2>
                </div>
                <div class="p-6">
                    <p class="text-slate-800 font-medium">@Model.Email</p>
                    @if (Model.IsEmailConfirmed)
                    {
                        <span class="inline-flex items-center gap-1 rounded-full bg-emerald-50 px-2.5 py-1 text-xs font-medium text-emerald-700 border border-emerald-100 mt-2">
                            <span class="material-icons text-sm">check_circle</span> Confirmado
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center gap-1 rounded-full bg-amber-50 px-2.5 py-1 text-xs font-medium text-amber-700 border border-amber-100 mt-2">
                            <span class="material-icons text-sm">schedule</span> Pendiente de confirmación
                        </span>
                        <form id="email-verification-form" method="post" asp-page-handler="SendVerificationEmail" class="mt-3">
                            <button type="submit" class="text-sm font-medium text-ritweb-teal hover:underline">
                                Reenviar correo de verificación
                            </button>
                        </form>
                    }
                </div>
            </div>
            <div class="rounded-2xl border border-slate-200 bg-white shadow-lg overflow-hidden">
                <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50">
                    <h2 class="text-sm font-semibold text-slate-700 uppercase tracking-wider">Cambiar correo</h2>
                    <p class="text-slate-500 text-xs mt-0.5">Tras el cambio deberá confirmar el nuevo correo.</p>
                </div>
                <form id="change-email-form" method="post" asp-page-handler="ChangeEmail" class="p-6">
                    <div asp-validation-summary="ModelOnly" class="rounded-lg bg-red-50 border border-red-100 text-red-700 text-sm p-3 mb-4" role="alert"></div>
                    <div class="mb-5">
                        <label asp-for="Input.NewEmail" class="block text-xs font-medium text-slate-500 uppercase tracking-wide mb-1.5"></label>
                        <input asp-for="Input.NewEmail" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 text-sm text-slate-800 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-ritweb-teal/50 focus:border-ritweb-teal transition" placeholder="nuevo@correo.com" autocomplete="email" />
                        <span asp-validation-for="Input.NewEmail" class="text-red-600 text-xs mt-1 block"></span>
                    </div>
                    <button type="submit" class="w-full py-3 px-4 rounded-lg text-sm font-semibold text-white bg-ritweb-teal hover:bg-teal-700 shadow-md hover:shadow-lg transition-all focus:outline-none focus:ring-2 focus:ring-ritweb-teal focus:ring-offset-2">
                        Guardar y enviar verificación
                    </button>
                </form>
            </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
