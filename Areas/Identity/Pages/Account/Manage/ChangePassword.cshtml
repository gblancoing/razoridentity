@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar contraseña";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="max-w-7xl mx-auto">
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-slate-800 tracking-tight">Cambiar contraseña</h1>
        <p class="mt-1 text-slate-500 text-sm">Actualice su contraseña de acceso a la cuenta.</p>
    </div>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 lg:gap-8">
        <aside class="lg:col-span-3">
            <partial name="_ManageNav" />
        </aside>
        <div class="lg:col-span-9">
            <div class="rounded-2xl border border-slate-200 bg-white shadow-lg overflow-hidden">
                <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50">
                    <h2 class="text-sm font-semibold text-slate-700 uppercase tracking-wider">Nueva contraseña</h2>
                    <p class="text-slate-500 text-xs mt-0.5">Use una contraseña segura con al menos 6 caracteres.</p>
                </div>
                <form id="change-password-form" method="post" class="p-6">
                    <div asp-validation-summary="ModelOnly" class="rounded-lg bg-red-50 border border-red-100 text-red-700 text-sm p-3 mb-4" role="alert"></div>
                    <div class="mb-5">
                        <label asp-for="Input.OldPassword" class="block text-xs font-medium text-slate-500 uppercase tracking-wide mb-1.5"></label>
                        <input asp-for="Input.OldPassword" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 text-sm text-slate-800 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-ritweb-teal/50 focus:border-ritweb-teal transition" placeholder="Contraseña actual" autocomplete="current-password" />
                        <span asp-validation-for="Input.OldPassword" class="text-red-600 text-xs mt-1 block"></span>
                    </div>
                    <div class="mb-5">
                        <label asp-for="Input.NewPassword" class="block text-xs font-medium text-slate-500 uppercase tracking-wide mb-1.5"></label>
                        <input asp-for="Input.NewPassword" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 text-sm text-slate-800 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-ritweb-teal/50 focus:border-ritweb-teal transition" placeholder="Nueva contraseña" autocomplete="new-password" />
                        <span asp-validation-for="Input.NewPassword" class="text-red-600 text-xs mt-1 block"></span>
                    </div>
                    <div class="mb-6">
                        <label asp-for="Input.ConfirmPassword" class="block text-xs font-medium text-slate-500 uppercase tracking-wide mb-1.5"></label>
                        <input asp-for="Input.ConfirmPassword" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 text-sm text-slate-800 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-ritweb-teal/50 focus:border-ritweb-teal transition" placeholder="Confirmar nueva contraseña" autocomplete="new-password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-xs mt-1 block"></span>
                    </div>
                    <button type="submit" class="w-full py-3 px-4 rounded-lg text-sm font-semibold text-white bg-ritweb-teal hover:bg-teal-700 shadow-md hover:shadow-lg transition-all focus:outline-none focus:ring-2 focus:ring-ritweb-teal focus:ring-offset-2">
                        Actualizar contraseña
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
