@page
@model LogoutModel
@{
    ViewData["Title"] = "Cerrar sesión";
    Layout = "_LoginLayout";
}

<div class="flex flex-col items-center mb-8">
    <div class="flex items-center gap-3 mb-2">
        <div class="w-10 h-10 bg-codelco-orange flex items-center justify-center rounded-sm">
            <span class="material-icons text-white text-2xl">logout</span>
        </div>
        <div class="text-left border-l border-slate-300 pl-3">
            <h1 class="text-xl font-bold text-slate-800 leading-none">RitWeb</h1>
            <p class="text-sm font-medium text-slate-500 uppercase tracking-wider mt-1">Cerrar sesión</p>
        </div>
    </div>
</div>

<div class="bg-white border border-slate-200 rounded-lg shadow-sm p-8">
    <h2 class="text-xl font-semibold text-slate-800 mb-6 text-center">@ViewData["Title"]</h2>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" class="space-y-5">
            <p class="text-slate-600 text-sm text-center">¿Está seguro que desea cerrar sesión?</p>
            <button type="submit" class="w-full py-3 px-4 bg-codelco-orange hover:bg-[#E55A16] text-white font-bold rounded shadow-sm transition-colors flex items-center justify-center gap-2 uppercase tracking-wide text-sm">
                <span class="material-icons text-lg">logout</span>
                Confirmar cierre de sesión
            </button>
        </form>
    }
    else
    {
        <p class="text-slate-600 text-center mb-6">Ha cerrado sesión correctamente.</p>
        <a asp-area="" asp-page="/Index" class="block w-full py-3 px-4 bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium rounded text-center transition-colors">
            Volver al inicio
        </a>
    }

    <div class="mt-6 pt-6 border-t border-slate-100 text-center">
        <a asp-area="Identity" asp-page="/Account/Login" class="text-sm text-codelco-orange font-medium hover:underline">Iniciar sesión de nuevo</a>
    </div>
</div>
