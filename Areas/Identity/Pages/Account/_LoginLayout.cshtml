<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorIdentity</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL@24,100..700,0..1&display=swap" rel="stylesheet" />
    <style>
        body { font-family: 'Inter', sans-serif; -webkit-font-smoothing: antialiased; }
    </style>
    <script id="tailwind-config">
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        "codelco-orange": "#FF671B",
                        "off-white": "#F3F4F6",
                    },
                    fontFamily: {
                        "sans": ["Inter", "sans-serif"]
                    },
                },
            },
        }
    </script>
    @await RenderSectionAsync("Head", required: false)
</head>
<body class="bg-off-white min-h-screen flex flex-col">
    <header class="sticky top-0 z-50 w-full bg-white/95 backdrop-blur-sm border-b border-slate-200 shadow-sm">
        <div class="max-w-7xl mx-auto px-4 h-12 flex items-center justify-between">
            <a class="flex items-center gap-2" asp-area="" asp-page="/Index">
                <div class="w-8 h-8 bg-codelco-orange flex items-center justify-center rounded-sm flex-shrink-0">
                    <span class="material-icons text-white text-lg">precision_manufacturing</span>
                </div>
                <span class="text-sm font-bold text-slate-800 hidden sm:inline">RitWeb</span>
            </a>
            <a asp-area="" asp-page="/Index" class="inline-flex items-center gap-1.5 text-sm font-medium text-slate-600 hover:text-codelco-orange transition-colors">
                <span class="material-icons text-lg">arrow_back</span>
                Volver al inicio
            </a>
        </div>
    </header>
    <main class="flex-1 flex items-center justify-center p-4">
        <div class="w-full max-w-md">
            @RenderBody()
        </div>
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
