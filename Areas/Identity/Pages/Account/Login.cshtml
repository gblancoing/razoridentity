@page
@model LoginModel
@{
    ViewData["Title"] = "Acceso de Usuarios";
    Layout = "_LoginLayout";
}

<div class="flex flex-col items-center mb-8">
    <div class="flex items-center gap-3 mb-2">
        <div class="w-10 h-10 bg-codelco-orange flex items-center justify-center rounded-sm">
            <span class="material-symbols-outlined text-white text-2xl">precision_manufacturing</span>
        </div>
        <div class="text-left border-l border-slate-300 pl-3">
            <h1 class="text-xl font-bold text-slate-800 leading-none">RazorIdentity</h1>
            <p class="text-sm font-medium text-slate-500 uppercase tracking-wider mt-1">Módulo de Control de Usuarios</p>
        </div>
    </div>
</div>

<div class="bg-white border border-slate-200 rounded-lg shadow-sm p-8">
    <h2 class="text-xl font-semibold text-slate-800 mb-6 text-center">Acceso de Usuarios</h2>

    <form id="account" method="post" class="space-y-5">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm" role="alert"></div>

        <div class="space-y-1.5">
            <label asp-for="Input.Email" class="block text-sm font-medium text-slate-700">Correo electrónico</label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <span class="material-icons text-codelco-orange text-xl">person</span>
                </div>
                <input asp-for="Input.Email" class="block w-full pl-10 pr-3 py-2.5 bg-white border border-slate-300 rounded text-slate-900 text-sm focus:ring-2 focus:ring-codelco-orange/20 focus:border-codelco-orange outline-none transition-all" autocomplete="username" aria-required="true" placeholder="usuario@ejemplo.com" />
            </div>
            <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
        </div>

        <div class="space-y-1.5">
            <label asp-for="Input.Password" class="block text-sm font-medium text-slate-700">Contraseña</label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <span class="material-icons text-codelco-orange text-xl">lock</span>
                </div>
                <input asp-for="Input.Password" class="block w-full pl-10 pr-3 py-2.5 bg-white border border-slate-300 rounded text-slate-900 text-sm focus:ring-2 focus:ring-codelco-orange/20 focus:border-codelco-orange outline-none transition-all" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
            </div>
            <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
        </div>

        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <input asp-for="Input.RememberMe" class="w-4 h-4 rounded border-slate-300 text-codelco-orange focus:ring-codelco-orange" />
                <label asp-for="Input.RememberMe" class="ml-2 text-sm text-slate-600 cursor-pointer">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
            </div>
            <a id="forgot-password" class="text-sm text-codelco-orange font-medium hover:underline" asp-page="./ForgotPassword">¿Olvidó su clave?</a>
        </div>

        <button id="login-submit" type="submit" class="w-full py-3 px-4 bg-codelco-orange hover:bg-[#E55A16] text-white font-bold rounded shadow-sm transition-colors flex items-center justify-center gap-2 uppercase tracking-wide text-sm">
            <span>Entrar</span>
            <span class="material-icons text-sm">login</span>
        </button>
    </form>

    <div class="mt-6 pt-4 space-y-2 text-sm text-center">
        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-codelco-orange font-medium hover:underline">Registrarse como nuevo usuario</a></p>
        <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-codelco-orange font-medium hover:underline">Reenviar confirmación de correo</a></p>
    </div>

    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
    {
        <div class="mt-6 pt-6 border-t border-slate-100">
            <h3 class="text-sm font-semibold text-slate-700 mb-3">O usar otro servicio</h3>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="flex flex-wrap gap-2">
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <button type="submit" class="py-2 px-4 bg-codelco-orange hover:bg-[#E55A16] text-white font-medium rounded text-sm" name="provider" value="@provider.Name" title="Acceder con @provider.DisplayName">@provider.DisplayName</button>
                }
            </form>
        </div>
    }

    <div class="mt-8 pt-6 border-t border-slate-100 flex justify-center">
        <p class="text-[11px] text-slate-400 font-medium uppercase tracking-[0.2em]">Módulo de Control de Usuarios - Razor Pages</p>
    </div>
</div>

<div class="mt-8 flex flex-col items-center space-y-4">
    <div class="flex items-center gap-6 opacity-60">
        <div class="flex items-center gap-1.5">
            <span class="material-icons text-slate-500 text-sm">shield</span>
            <span class="text-[10px] text-slate-600 font-semibold uppercase tracking-tighter">Conexión segura</span>
        </div>
    </div>
    <p class="text-slate-400 text-xs text-center">© @DateTime.Now.Year RazorIdentity. Todos los derechos reservados.</p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
