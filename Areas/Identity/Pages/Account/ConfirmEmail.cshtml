@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirmar correo";
    Layout = "_LoginLayout";
}

<div class="flex flex-col items-center mb-8">
    <div class="w-10 h-10 bg-codelco-orange flex items-center justify-center rounded-sm">
        <span class="material-symbols-outlined text-white text-2xl">mark_email_read</span>
    </div>
</div>

<div class="bg-white border border-slate-200 rounded-lg shadow-sm p-8 text-center">
    <h2 class="text-xl font-semibold text-slate-800 mb-2">Confirmación de correo</h2>
    <p class="text-sm text-slate-600 mb-6">@Model.StatusMessage</p>
    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="inline-flex items-center gap-2 py-3 px-6 bg-codelco-orange hover:bg-[#E55A16] text-white font-bold rounded shadow-sm transition-colors text-sm">
        <span class="material-icons text-sm">login</span>
        Iniciar sesión
    </a>
</div>
